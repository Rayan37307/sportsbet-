# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/sportsbook
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRE=30d

# Crypto Payment Configuration
CRYPTO_NETWORK=ethereum
CRYPTO_PRIVATE_KEY=your-crypto-wallet-private-key
CRYPTO_ADDRESS=your-crypto-wallet-address

# E-wallet Configuration
EWALLET_API_KEY=your-ewallet-api-key
EWALLET_SECRET=your-ewallet-secret
EWALLET_ENDPOINT=https://api.ewallet.com

# Commission Configuration
AGENT_COMMISSION_RATE=0.05
SUB_AGENT_COMMISSION_RATE=0.03
MIN_BET_AMOUNT=1.00
MAX_BET_AMOUNT=10000.00

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Sports Betting APIs
ODDS_API_KEY=your-odds-api-key-from-the-odds-api.com
SPORTMONK_API_KEY=your-sportmonk-api-key
API_FOOTBALL_KEY=your-api-football-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
